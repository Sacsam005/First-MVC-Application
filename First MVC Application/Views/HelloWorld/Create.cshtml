@model DogViewModel

<h1 class="text-center">Dog Registration</h1>  
<hr style="height:0.5px"/>


<div class="row justify-content-center">
    <div class="col-6">
            <div class="card">
                 <div class="card-header">
                     <h5>Register your dog</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="HelloWorld" asp-action="RegisterDog" method="post">
                        <div class="mb-3">
                            <label class="form-label">Dog's Name</label>
                            <input asp-for=Name type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Age</label>
                            <input asp-for=Age type="number" max="10" min="1" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer">  
                    
                </div>
           
           

        </div>

        
    </div>
</div>
